<h1> Articles listing page</h1>


<%= render 'article' %>
<div class="flickr_pagination mb-4" style="margin:20px">
  <%= will_paginate @articles, :container => false %>
</div>


<% if logged_in? %>
  <h3>Add new article: <%= button_to 'Add', '/articles/new', method: :get, class: "btn btn-secondary" %></h3>
<% end %>

