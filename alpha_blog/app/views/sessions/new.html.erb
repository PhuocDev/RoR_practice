<h1> Login form </h1>



<%=  form_for :session, url: '/login' do |form| %>

  <div>
    <%= form.label :username, style: "display: block" %>
    <%= form.text_field :username %>
    <%= form.label :password, style: "display: block" %>
    <%= form.password_field :password, placeholder: "Choose a password",
    style: "margin-bottom: 10px"%>
  </div>

  <div>
    <h4> <%= form.submit "Log in" %> </h4>
  </div>
<% end %>
<div class="mb-3">
      <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
</div>
